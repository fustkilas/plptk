@import "tachyons.css"

*
  margin 0
  padding 0

body
  display grid
  font-family "Helvetica"

img
  max-width 100%

ul
  list-style-type none


.month
  display grid
  grid-template-rows repeat(4, 25vh)


.week
  display grid
  grid-template-columns repeat(7, 1fr)


.day:nth-child(odd)
.day:nth-child(even)
  background #fff

