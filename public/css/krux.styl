*
  margin 0
  padding 0

body
  padding 0em 0
  font-family: 'Roboto', sans-serif;
  font-family: 'Concert One', cursive;
  display grid



#intro
  position relative
  display grid
  grid-template-columns repeat(6, 1fr)

  
  .banner
    grid-area 2 / 2 / 3 / 7
    font-size 40px
    color #6564db
    background rgba(0, 255, 0, 0.1)
    text-shadow 4px 4px #000
    padding 1em
    z-index 1
    background-image: url("../img/tech.jpeg");

  .logotype
    font-size 2em
    padding 0 0 0.4em 0


  .hero
    grid-area 1 / 1 / 6 / 9
    


img
  max-width 100%

ul
  list-style-type none